using System;
using System.Collections.Generic;
using System.Text;
using Domain.Commands;
using MediatR;
using System.Threading.Tasks;
using System.Threading;
using Domain.Interface;

namespace Domain.Handlers
{
    public class DeleteGenericHandler<TEntity> : IRequestHandler<DeleteGenericCommand<TEntity>, TEntity> where TEntity : class
    {
        private readonly IGenericRepository<TEntity> Repository;

        public DeleteGenericHandler(IGenericRepository<TEntity> repository)
        {
            Repository = repository;
        }
        public async Task<TEntity> Handle(DeleteGenericCommand<TEntity> request, CancellationToken cancellationToken)
        {
            var result = Repository.Remove(request.Id);
            return await Task.FromResult(result);
        }
    }
}
